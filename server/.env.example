# Настройки окружения
NODE_ENV=development
PORT=3000
HOST=localhost
API_PREFIX=/api

# Настройки CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5173

# Настройки базы данных
DB_HOST=localhost
DB_PORT=27017
DB_NAME=wildberries-assistant
DB_USERNAME=
DB_PASSWORD=
DB_URI=mongodb://localhost:27017/wildberries-assistant

# Настройки JWT
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# Настройки логирования
LOG_LEVEL=debug
ENABLE_FILE_LOGGING=true
LOGS_DIR=logs

# Настройки API Wildberries

# Главный токен API (можно использовать для всех категорий)
WB_API_TOKEN=

# Токены API для отдельных категорий
WB_API_TOKEN_CONTENT=
WB_API_TOKEN_ANALYTICS=
WB_API_TOKEN_PRICES_DISCOUNTS=
WB_API_TOKEN_MARKETPLACE=
WB_API_TOKEN_STATISTICS=
WB_API_TOKEN_PROMOTION=
WB_API_TOKEN_FEEDBACKS_QUESTIONS=
WB_API_TOKEN_BUYERS_CHAT=
WB_API_TOKEN_SUPPLIES=
WB_API_TOKEN_BUYERS_RETURNS=
WB_API_TOKEN_DOCUMENTS=
WB_API_TOKEN_TARIFFS=

# Использовать тестовый контур API (true/false)
WB_API_TEST_ENV=false

# Настройки системы печати
PRINTING_API_KEY=
PRINTING_ENDPOINT=
DEFAULT_PRINTER=

# Прочие настройки
MAX_UPLOAD_SIZE=50mb
REQUEST_TIMEOUT=10000

# Настройки базы данных PostgreSQL
DATABASE_URL=postgres://wbapp:password@wb-db:5432/wbassistant
DB_USER=wbapp
DB_PASSWORD=password
DB_HOST=wb-db
DB_PORT=5432

# Настройки Redis
REDIS_URL=redis://:password@wb-redis:6379
REDIS_PASSWORD=password
REDIS_HOST=wb-redis
REDIS_PORT=6379

# Настройки SMTP для внешних интеграций
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASS=password